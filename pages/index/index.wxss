view {
  color: var(--themeColor)
}

/*
  因为swiped标签与image标签有默认样式影响，所以更改宽高
*/
.index_swiper swiper{
  height: 340rpx;
  width: 750rpx;
}
.index_swiper swiper image {
  width: 100%;
}

.index_cate {
  display: flex;
}
.index_cate navigator {
  flex: 1;
  padding: 20rpx;
}
.index_cate navigator image {
  width: 100%;
}

.index_floor {}
.floor_title {}
.floor_title image {
  width: 100%;
}
.floor_item {
  /* 清除浮动 */
  overflow: hidden;
}
.floor_item navigator {
  float: left;
  width: 32%;
}
.floor_item navigator:nth-last-child(-n+4) {
  height: calc(33.33vw*386/232/2);
  border-left: 10rpx solid #fff;
}
.floor_item navigator {
  padding-bottom: 15rpx;
}

.floor_item navigator image {
  width: 100%;
  height: 100%;
}
