/* pages/goods_detail/index.wxss */
page {
  padding-bottom: 90rpx;
}
.detail_swiper swiper {
  height: 65vw;
  text-align: center
}

.detail_image {
  width: 60%;
}

.detail_price {
  font-size: 32rpx;
  font-weight: 600rpx;
  color: var(--themeColor);
  padding: 15rpx;
}

.detail_info {
  display: flex;
  padding: 10rpx 0;
  border-top: 10rpx solid #dedede;
  border-bottom: 10rpx solid #dedede;
}

.info_text {
  flex: 5;
  padding: 10 0rpx;
  color: #000;
  font-size: 30rpx;
  border-right: 1rpx solid #000;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 80rpx;
}

.info_icon {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.info_icon {
  font-size: 24rpx;
}

.iconfont {
  font-size: 50rpx;
}

.info_title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  height: 90rpx;
  width: 100%;
  border-top: 1rpx solid #ccc;
}

.iconfont {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.footer_text {
  font-size: 24rpx;
}

.footer_icon {
  padding:5rpx 15rpx;
  position: relative;
}
.footer_btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.footer_cart {}
.footer_service {}
.footer_share {}

.btn_addTo {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background-color: #ffa500;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}

.btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background-color: #eb4450;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}